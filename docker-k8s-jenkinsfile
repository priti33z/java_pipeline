pipeline {
    agent any
    
    tools{
        maven "Maven-3.9.11"
    }

    stages {
        stage('Clone Repo') {
            steps {
                https://github.com/priti33z/java_pipeline.git
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Image') {
            steps {
                sh 'docker build -t priti/minijava .'
            }
        }
        stage('k8s deployment') {
            steps {
                sh 'kubectl apply -f k8s-deploy.yml'
            }
        }
    }
}
